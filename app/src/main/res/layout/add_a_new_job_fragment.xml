<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.driver.AddANewJobFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/job_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_info"
                android:layout_marginTop="15dp"
                android:text="$15 Per hours"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <View
                android:id="@+id/vl1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvCompanyName"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvPickAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vl1"
                android:layout_marginTop="15dp"
                android:text="Pick up Address"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPickAddval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPickAddress"
                android:layout_marginTop="15dp"
                android:text="Street"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <View
                android:id="@+id/vl2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvPickAddval"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl2"
                android:layout_marginTop="15dp"
                android:text="City......"
                android:textSize="16sp" />


            <View
                android:id="@+id/vl3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvCity"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />


            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl3"
                android:layout_marginTop="15dp"
                android:text="State......"
                android:textSize="16sp" />


            <View
                android:id="@+id/vl5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvState"
                android:layout_marginTop="15dp"
                android:background="@color/view_line"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvZip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl5"
                android:layout_marginTop="15dp"
                android:text="Zip......"
                android:textSize="16sp" />


            <View
                android:id="@+id/vl4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvZip"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvDropAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vl4"
                android:layout_marginTop="15dp"
                android:text="Drop Off Address"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDropAddval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDropAddress"
                android:layout_marginTop="15dp"
                android:text="Street...."
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <View
                android:id="@+id/vl6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvDropAddval"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvCityDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl6"
                android:layout_marginTop="15dp"
                android:text="City......"
                android:textSize="16sp" />


            <View
                android:id="@+id/vl7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvCityDrop"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />


            <TextView
                android:id="@+id/tvStateDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl7"
                android:layout_marginTop="15dp"
                android:text="State......"
                android:textSize="16sp" />


            <View
                android:id="@+id/vl8"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvStateDrop"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvZipDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl8"
                android:layout_marginTop="15dp"
                android:text="Zip......"
                android:textSize="16sp" />


            <View
                android:id="@+id/vl9"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvZipDrop"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl9"
                android:layout_marginTop="15dp"
                android:text="Date From .....................To ...................." />

            <View
                android:id="@+id/vl10"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvDateRange"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl10"
                android:layout_marginTop="15dp"
                android:text="Starting Time .....................Ending Time ...................."
                android:textSize="16sp" />

            <View
                android:id="@+id/vl11"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvTime"
                android:layout_marginTop="15dp"
                android:background="@color/view_line" />

            <TextView
                android:id="@+id/tvAdditionInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vl11"
                android:layout_marginTop="15dp"
                android:text="Additional Instruction"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdditionInstruction"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_sq_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:autofillHints=""
                    android:background="@null"
                    android:paddingVertical="5dp"
                    android:gravity="top"
                    android:hint="Additional Instruction ..."
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="16sp" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_below="@+id/ll_end"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_blue_solid"
                android:gravity="center"
                android:text="Send"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>